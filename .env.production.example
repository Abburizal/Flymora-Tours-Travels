# ====================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ====================================
# ⚠️  IMPORTANT: Copy this to .env on production server
# ⚠️  Generate new APP_KEY: php artisan key:generate
# ⚠️  Update all credentials before deployment

APP_NAME="Flymora Tours and Travels"
APP_ENV=production
APP_KEY=base64:REPLACE_WITH_NEW_KEY_FROM_php_artisan_key:generate
APP_DEBUG=false  # ✅ CRITICAL: Must be false in production
APP_URL=https://yourdomain.com  # ✅ CHANGE TO YOUR DOMAIN

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # ✅ Production: only log errors

# ====================================
# DATABASE CONFIGURATION
# ====================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=flymora_production  # ✅ CHANGE TO YOUR DATABASE
DB_USERNAME=root  # ✅ CHANGE TO YOUR USERNAME
DB_PASSWORD=  # ✅ ADD YOUR DATABASE PASSWORD

# ====================================
# SESSION & SECURITY
# ====================================
SESSION_DRIVER=database  # ✅ Use database for production
SESSION_LIFETIME=120
SESSION_ENCRYPT=true  # ✅ CRITICAL: Encrypt sessions
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true  # ✅ CRITICAL: HTTPS only
SESSION_HTTP_ONLY=true  # ✅ CRITICAL: Prevent XSS
SESSION_SAME_SITE=lax  # ✅ CRITICAL: CSRF protection

# ====================================
# BROADCAST & CACHE
# ====================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database  # ✅ Use database queue

CACHE_STORE=database
CACHE_PREFIX=flymora_cache

# ====================================
# MIDTRANS PAYMENT (PRODUCTION)
# ====================================
# ⚠️  IMPORTANT: Use PRODUCTION credentials!
MIDTRANS_SERVER_KEY=your_production_server_key_here  # ✅ FROM MIDTRANS DASHBOARD
MIDTRANS_CLIENT_KEY=your_production_client_key_here  # ✅ FROM MIDTRANS DASHBOARD
MIDTRANS_IS_PRODUCTION=true  # ✅ CRITICAL: Set to true
MIDTRANS_SANITIZE=true
MIDTRANS_3DS=true

# ====================================
# MAIL CONFIGURATION (PRODUCTION)
# ====================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com  # ✅ OR YOUR SMTP SERVER
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com  # ✅ CHANGE THIS
MAIL_PASSWORD=your-app-password  # ✅ CHANGE THIS (use App Password for Gmail)
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@flymoratours.com  # ✅ CHANGE THIS
MAIL_FROM_NAME="${APP_NAME}"

# ====================================
# GOOGLE ANALYTICS (Optional)
# ====================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX  # ✅ FROM GOOGLE ANALYTICS DASHBOARD

# ====================================
# AWS S3 (Optional - for file storage)
# ====================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# ====================================
# PUSHER (Optional - for real-time features)
# ====================================
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# ====================================
# VITE (Frontend Build)
# ====================================
VITE_APP_NAME="${APP_NAME}"

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_ADMIN_LOGIN=5  # Max 5 login attempts per minute
RATE_LIMIT_API=60  # Max 60 API requests per minute

# ====================================
# BACKUP & MONITORING (Recommended)
# ====================================
# SENTRY_LARAVEL_DSN=  # For error tracking
# BACKUP_DISK=s3  # For automated backups

# ====================================
# SECURITY HEADERS
# ====================================
SECURE_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000  # 1 year
