{
  "info": {
    "_postman_id": "tripin-travel-api",
    "name": "Tripin Travel API",
    "description": "API endpoints for Tour & Booking management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Tours",
      "item": [
        {
          "name": "Get All Tours",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/tours",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tours"]
            }
          }
        },
        {
          "name": "Get Tours by Destination",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/tours?destination=Bali",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tours"],
              "query": [
                {
                  "key": "destination",
                  "value": "Bali"
                }
              ]
            }
          }
        },
        {
          "name": "Get Tours by Category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/tours?category_id=1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tours"],
              "query": [
                {
                  "key": "category_id",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Get Single Tour",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/tours/1",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "tours", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"tour_id\": 1,\n  \"booking_date\": \"2026-01-15\",\n  \"number_of_participants\": 2,\n  \"total_price\": 1799.98,\n  \"status\": \"pending\",\n  \"notes\": \"Special accommodation needed\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/bookings",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "bookings"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"booking_id\": 1,\n  \"amount\": 1799.98,\n  \"payment_method\": \"credit_card\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/payments",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "payments"]
            }
          }
        },
        {
          "name": "Payment Callback",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"transaction_id\": \"TXN-123456789\",\n  \"status\": \"completed\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/payment/callback",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "payment", "callback"]
            }
          }
        }
      ]
    }
  ]
}
